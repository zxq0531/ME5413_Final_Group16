<launch>
    <!-- Launch the local_planner node -->
    <node pkg="local_planner" type="local_planner.py" name="local_planner" output="screen">
        <!-- You can pass parameters if needed -->
        <param name="obstacle_distance_threshold" value="1.0" />
        <param name="lateral_offset" value="0.3" />
        <param name="robot_speed" value="0.2" />
        <param name="horizon_distance" value="3.0" />
    </node>
</launch>
